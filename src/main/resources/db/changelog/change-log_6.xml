<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="6" author="Sergei Andreev">
        <sql>DROP TYPE IF EXISTS mvp.grade_type</sql>
        <sql>CREATE TYPE mvp.grade_type AS ENUM ('PLUS', 'MINUS')</sql>
        <addColumn tableName="geo_point" schemaName="mvp">
            <column name="grade" type="numeric(5)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="geo_point_history" schemaName="mvp">
            <column name="grade" type="numeric(5)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <createTable tableName="grade_log" schemaName="mvp">
            <column name="uuid" type="uuid" defaultValue="public.uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_uuid" type="uuid">
                <constraints foreignKeyName="user_uuid_fk" referencedTableName="user" referencedColumnNames="uuid" nullable="false" referencedTableSchemaName="mvp"/>
            </column>
            <column name="grade_type" type="mvp.grade_type">
                <constraints nullable="false"/>
            </column>
            <column name="geo_point_uuid" type="uuid">
                <constraints foreignKeyName="geo_point_uuid_fk" referencedTableName="geo_point" referencedColumnNames="uuid" nullable="false" referencedTableSchemaName="mvp"/>
            </column>
            <column name="date" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>