<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="6" author="Sergei Andreev">
        <sql>DROP TYPE IF EXISTS mvp.notify_status</sql>
        <sql>CREATE TYPE mvp.notify_status AS ENUM ('ACTIVE', 'INACTIVE')</sql>
        <createTable tableName="notification" schemaName="mvp">
            <column name="uuid" type="uuid" defaultValue="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="mvp.notify_status">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="end_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>