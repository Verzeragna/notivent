<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="8" author="Sergei Andreev">
        <sql>DROP TYPE IF EXISTS mvp.endpoint_name</sql>
        <sql>CREATE TYPE mvp.endpoint_name AS ENUM (
            'MAIN',
            'AUTH',
            'SAVE_GEO_POINT',
            'GET_GEO_POINT_BY_ID',
            'GET_ALL_GEO_POINTS_FOR_USER',
            'IS_GEO_POINT_BELONG_USER',
            'DELETE_GEO_POINT',
            'FIND_USER_SUBSCRIPTION',
            'GET_NOTIFICATION',
            'LIKE',
            'GET_GEO_POINT_GRADE',
            'GET_COMMENTS_GEO_POINT',
            'GET_COUNT_COMMENTS_GEO_POINT',
            'POST_COMMENT',
            'GET_USER_NAME',
            'SET_USER_NAME',
            'RESET_USER_PASSWORD',
            'CHANGE_USER_PASSWORD' )
        </sql>
        <createTable tableName="endpoint" schemaName="mvp">
            <column name="uuid" type="uuid" defaultValue="mvp.uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="mvp.endpoint_name">
                <constraints nullable="false"/>
            </column>
            <column name="endpoint" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>