<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="11" author="Sergei Andreev">
        <createTable tableName="location">
            <column name="uuid" type="uuid" defaultValue="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="postal_code" type="varchar(255)">
            </column>
            <column name="country" type="varchar(255)">
            </column>
            <column name="area" type="varchar(255)">
            </column>
            <column name="city" type="varchar(255)">
            </column>
            <column name="street" type="varchar(255)">
            </column>
            <column name="house_number" type="varchar(255)">
            </column>
            <column name="address_line" type="varchar(255)">
            </column>
        </createTable>
        <addUniqueConstraint tableName="location" columnNames="address_line"/>
        <addColumn tableName="geo_point">
            <column name="location_id" type="uuid">
                <constraints foreignKeyName="location_id_fk" referencedTableName="location" referencedColumnNames="uuid"/>
            </column>
        </addColumn>
        <addColumn tableName="geo_point_history">
            <column name="location_id" type="uuid">
                <constraints foreignKeyName="location_id_fk" referencedTableName="location" referencedColumnNames="uuid"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>