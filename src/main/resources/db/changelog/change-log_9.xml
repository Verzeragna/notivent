<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="9" author="Sergei Andreev">
        <addColumn tableName="tariff" schemaName="mvp">
            <column name="subtitle" type="varchar(250)" defaultValue="">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <createTable tableName="payment_parameters" schemaName="mvp">
            <column name="uuid" type="uuid" defaultValue="public.uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="terminal_key" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="public_key" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addColumn tableName="tariff" schemaName="mvp">
            <column name="payment_parameters_uuid" type="uuid">
                <constraints foreignKeyName="payment_parameters_uuid_fk" referencedTableName="payment_parameters" referencedColumnNames="uuid" referencedTableSchemaName="mvp"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>