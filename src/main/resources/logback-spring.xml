<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <springProperty scope="context" name="storagePeriod" source="logging.storage-period-days" defaultValue="10"/>
    <springProperty scope="context" name="logsFolder" source="logging.file.path" defaultValue="logs"/>

    <property scope="context" name="filteredClasses" value="
                java.lang.Thread,
                java.lang.reflect.Method,
                java.util.concurrent.ThreadPoolExecutor,
                javax.servlet,
                sun.reflect,
                org.apache.catalina,
                org.apache.coyote,
                org.apache.tomcat,
                net.sf.cglib,
                org.springframework.web,
                org.springframework.security,
                org.springframework.boot.actuate,
                com.m3.apiserver
    "/>

    <property scope="context" name="pattern"
              value="%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern> %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n </pattern>
        </layout>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern> %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n </pattern>
        </layout>
    </appender>

    <logger name="org.springframework.security" level="trace" additivity="false">
        <appender-ref ref="Console" />
    </logger>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logsFolder}/graphteam.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logsFolder}/archive/graphteam_%d{dd-MM-yyyy}.log.gz</fileNamePattern>
            <maxHistory>${storagePeriod}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
