<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.notivent.dao.NotificationDao">

    <select id="findLastActive" resultType="ru.notivent.model.Notification">
        SELECT *
        FROM mvp.notification
        WHERE status = 'ACTIVE'::mvp.notify_status
        AND end_at > now()
        ORDER BY created_at DESC
        LIMIT 1
    </select>
</mapper>